<form class="form-inline" action="show" method="POST">
  <fieldset>
    <legend>Password sharing</legend>
    <%= token_tag nil %>
    <% if params[:show] == 'yes' %>
      <input id="password" name="password" type="text" readonly="readonly" onclick="this.select();" value="<%= @password %>" />
      <span class="help-block">Ваш пароль</span>
    <% else %>
      <span class="help-block">Пароль будет отображен лишь 1 раз, сохраните его.</span>
      <input type="hidden" id="show" name="show" value="yes">
      <input type="hidden" id="key" name="key" value="<%= @key %>">
      <button type="submit" class="btn btn-success btn-large">Показать</button>
    <% end %>
  </fieldset>
</form>
